    <servlet>
        <servlet-name>DeleteController</servlet-name>
        <servlet-class>Controller.DeleteController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>Controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InvoiceController</servlet-name>
        <servlet-class>Controller.InvoiceController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InsertController</servlet-name>
        <servlet-class>Controller.InsertController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IncomeController</servlet-name>
        <servlet-class>Controller.IncomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RoomDeleteController</servlet-name>
        <servlet-class>Controller.RoomDeleteController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IncomeTimeController</servlet-name>
        <servlet-class>Controller.IncomeTimeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RoomUpdateController</servlet-name>
        <servlet-class>Controller.RoomUpdateController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RoomServlet</servlet-name>
        <servlet-class>Controller.RoomServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MenuController</servlet-name>
        <servlet-class>Controller.MenuController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RoomInsertController</servlet-name>
        <servlet-class>Controller.RoomInsertController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateController</servlet-name>
        <servlet-class>Controller.UpdateController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RoomController</servlet-name>
        <servlet-class>Controller.RoomController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteController</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InvoiceController</servlet-name>
        <url-pattern>/invoice</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InsertController</servlet-name>
        <url-pattern>/addinvoice</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IncomeController</servlet-name>
        <url-pattern>/income</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RoomDeleteController</servlet-name>
        <url-pattern>/roomdelete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IncomeTimeController</servlet-name>
        <url-pattern>/incometime</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RoomUpdateController</servlet-name>
        <url-pattern>/room/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RoomInsertController</servlet-name>
        <url-pattern>/room/insert</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateController</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RoomController</servlet-name>
        <url-pattern>/rooms</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
